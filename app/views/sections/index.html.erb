<p id="notice"><%= notice %></p>

<h1>Listing Sections</h1>

<table>
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Course Code</th>
      <th>Section #</th>
      <th>Student</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.course ? section.course.name : "NIL COURSE NAME" %></td>
        <td><%= section.course ? section.course.course_code : "NIL COURSE CODE" %></td>
        <td><%= section ? section.section_id : "NIL SECTION NUMBER" %></td>
        <td><%= section.student ? section.student.name : "NIL STUDENT NAME" %></td>
        <td><%= section.professor ? (section.professor.name + ' ' + section.professor.last_name) : "NIL PROFESSOR NAME" %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

